div.text-center
  h4 the only limit is your imagination
  p.subheader click to purchase ether
  div#counters-primary.row
    div#total-sold-container.col-md-6
      div.inner.pull-right
        div.dial-container.pull-right
          input(type="text", value="0").dial-total-sold
          .dial-shim.dial-total-sold-shim
        div.headers.pull-right
          span.counter-header Total Sold
          span.counter-subheader Days left 
            span#days-left-count.counter 0
    div#sold-today-container.col-md-6
      div.inner.pull-left
        div.dial-container.pull-left
          input(type="text", value="0").dial-sold-today
        div.headers.pull-left  
          span.counter-header Sold Today
          span.counter-subheader
            span#sold-today-count.counter 0
  #counters-secondary.row
    #market-cap-container.col-md-4
      .inner.pull-right
        span.counter-header Market Cap
        span.counter
          $
          span#market-cap 0
        a(href="#")
          .plusicon +
          span.link-title Market cap info
    #total-sold-secondary-container.col-md-4
      .inner
        span.counter-header Total Sold
        span#total-sold-count.strong.counter 0
        a(href="#")
          .plusicon +
          span.link-title Buy Ether
    div#exchange-rate-container.col-md-4
      div.inner.pull-left
        span.counter-header Exchange Rate
        span.counter 1BTC = 2,000Ether
        a(href="#")
          .plusicon +
          span.link-title Exchanges
        